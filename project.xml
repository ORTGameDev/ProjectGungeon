<?xml version="1.0" encoding="utf-8"?>
<project>
	
	
	
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Welcome to the Gungle" package="com.gastonignacio.obligatorio" version="1.0.0" company="GastonIgnacio" />
	
	<!-- output -->
	<app main="Main" file="Obligatorio" path="bin" />
	<app swf-version="11.8" if="flash" />
	
	<window width="0" height="0" background="#020508" fps="60" />
	<window width="800" height="600" orientation="landscape" fullscreen="false" fps="60" vsync="false" borderless="true" resizable="false" antialiasing="4" />
	
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/img/pointer" rename="pointer" />
	<assets path="assets/img/barrels" rename="barrels" />
	<assets path="assets/sounds" rename="sounds" />
	<assets path="assets/sounds/music" rename="music" />
	<assets path="assets/maps" rename="maps" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>